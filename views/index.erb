<h3>Leaderboard</h3>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Wins</th>
      <th>Losses</th>
    </tr>
  </thead>

  <tbody>
    <% @team_records.each do |team_record| %>
      <tr>
        <td><%= team_record[:name] %></td>
        <td><%= team_record[:wins] %></td>
        <td><%= team_record[:losses] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
